<div class="grid12_9">
    
<h1>Listing dishes</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th>Cost per dish</th>
    <th>Available?</th>
    <th></th>
    <th></th>
  </tr>

<% @dishes.each do |dish| %>
  <tr>
    <td><%= dish.name %></td>
    <td><%= dish.description %></td>
    <td><%= dish.cost_per_dish %></td>
    <td><%= dish.isactive %></td>
    <td><%= link_to 'Show', chefs_dish_path(dish) %></td>
    <td><%= link_to 'Edit', edit_chefs_dish_path(dish) %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Dish', new_chefs_dish_path %>

</div>
