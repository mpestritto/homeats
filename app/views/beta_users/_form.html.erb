<%= form_for(@beta_user) do |f| %>

    <div class="register_block"></div>
        <div class="register_block_1 rblock_back"></div>
          <!--<div class="register_block_2 rblock_back"></div>
          <div class="register_block_3 rblock_back"></div>
          <div class="register_block_4 rblock_back"></div>
          <div class="register_block_5 rblock_back"></div> -->

          <div class="reg_site_logo">
             <%= link_to ( image_tag "BetauserSignup/logo.png" , :class=>'reg_logo reg_page_elements' ), listings_path %>
          </div>



           <div class="reg_site_block reg_page_elements">
                    <% email_css_class = @beta_user.errors.include?(:email) ? "reg_email_box" : "reg_email_box" %>  <!--avoid highlighting -->
                    <%= f.text_field :email, :class=>"#{email_css_class}" %>
                    <%= image_submit_tag("BetauserSignup/sign-up-btn.png",  :class=>'reg_btn') %>
           </div>

           <div class="reg_private_beta_txt reg_page_elements">
                Sign up for private beta
           </div>
           <div class="reg_page_elements">
               <% if @beta_user.errors.any? %>
                    <div id="error_explanation reg_page_elements">
                      <h2><%= pluralize(@beta_user.errors.count, "error") %> </h2>

                      <ul>
                      <% @beta_user.errors.full_messages.each do |msg| %>
                        <li><%= msg %></li>
                      <% end %>
                      </ul>
                    </div>
                <% end %>
           </div>
           <div class="reg_txt reg_page_elements">
                   <span class="reg_txt1"><%= link_to image_tag("BetauserSignup/txt1.png") %></span>
                   <span class="reg_txt1"><%= link_to image_tag("BetauserSignup/txt2.png") %></span>
                   <span class="reg_txt1"><%= link_to image_tag("BetauserSignup/txt2.png") %></span>
           </div>
            <div class="reg_pic reg_page_elements">
                   <span class="reg_pic1"><%= link_to image_tag("BetauserSignup/pic1.png") %></span>
                   <span class="reg_pic1"><%= link_to image_tag("BetauserSignup/pic2.png") %></span>
                   <span class="reg_pic1"><%= link_to image_tag("BetauserSignup/pic3.png") %></span>
            </div>
            <div class="reg_string reg_page_elements">
                       <%= link_to image_tag("BetauserSignup/string.png", :border => "0", :onmouseover => "this.src='/images/BetauserSignup/string.png'", :onmouseout => "this.src='/images/BetauserSignup/string.png'") %>
            </div>


</div>
<% end %>

